<%- include('includes/head') %> <%- include('includes/navbar') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-4">
      <h1 class="text-center">Entrar ou criar conta</h1>
      <p class="text-center lead">Faça login ou crie sua conta:</p>

      <%- include('includes/messege') %>

      <div class="row">
        <div class="col-lg">
          <h4>Crie sua conta</h4>
          <small>Caso ainda não tenha conta crie uma agora.</small>
          <hr>
          <form class="form-cadastro" role="form" method="POST" action="/login/register">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group my-3">
              <label for="email" class="sr-only">Email</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="Email" value="">
            </div>
            <div class="my-4"></div>
            <div class="form-group my-3">
              <label for="password" class="sr-only">Senha</label>
              <input type="password" class="form-control" id="password" name="password" placeholder="Criar Senha">
            </div>
            <div class="form-group my-3">
              <button type="submit" class="btn btn-primary">Criar conta</button>
              <a href="#">Esqueceu sua senha?</a>
            </div>
          </form>
        </div>
        <div class="col-lg">
          <h4>Faça seu Login</h4>
          <small>Caso tenha uma conta, você pode fazer login.</small>
          <hr>
          <form class="form-login" role="form" method="POST" action="/login/logado">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group my-3">
              <label for="email" class="sr-only">Email</label>
              <input type="email" class="form-control" name="email" placeholder="Email" value="">
            </div>
            <div class="my-4"></div>
            <div class="form-group my-3">
              <label for="password" class="sr-only">Senha</label>
              <input type="password" class="form-control" name="password" placeholder="Senha">
            </div>
            <div class="form-group my-3">
              <button type="submit" class="btn btn-primary">Entrar</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
