<% if (errors.length > 0 ) { %>
<div class="row">
  <div class="col">
    <div class="alert alert-danger text-center">
      <% errors.forEach(erro => { %>
        <strong><%= erro %> <br></strong>
        <% }); %>
    </div>
  </div>
</div>
<% } %>

<% if (success.length > 0 ) { %>
  <div class="row">
    <div class="col">
      <div class="alert alert-success text-center">
        <% success.forEach(success => { %>
          <strong><%= success %> <br></strong>
          <% }); %>
      </div>
    </div>
  </div>
  <% } %>